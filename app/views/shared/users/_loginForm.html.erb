<h3 class="subtitle is-3 has-text-link">Login to olubalance</h3>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <label class="label has-text-grey">Email Address</label>
    <div class="control has-icons-left">
      <%= f.text_field :email, class: "input is-primary",
                               placeholder: "john@gmail.com" %>
      <span class="icon is-small is-left">
        <i class="fas fa-envelope"></i>
      </span>
    </div>
  </div>

  <div class="field">
    <label class="label has-text-grey">Password</label>
    <div class="control has-icons-left">
      <%= f.password_field :password, class: "input is-primary",
                                      placeholder: "Password" %>
      <span class="icon is-small is-left">
        <i class="fas fa-lock"></i>
      </span>
    </div>
  </div>

  <div class="field mt-25">
    <div class="control">
      <%= f.button '<span class="icon"><i class="fas fa-sign-in-alt"></i></span><span>Login</span>'.html_safe, class: "button is-link" %>
    </div>
  </div>
<% end %>
<%= render partial: "devise/shared/links" %>