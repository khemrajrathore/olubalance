<table class="table is-hoverable is-fullwidth ob-table animated fadeIn faster">
  <thead>
    <th colspan=5 class="ob-table-phead">
      <!-- Main container -->
      <div class="level">
        <!-- Left side -->
        <div class="level-left">
          <div class="level-item">
            <p class="title is-5 has-text-white">
              <span class="icon is-medium ob-icon-rpad">
                <i class="fas fa-lg fa-piggy-bank"></i>
              </span>
              <%= @account.name %>
            </p>
          </div>
        </div>

        <!-- Right side -->
        <div class="level-right">

        </div>
      </nav>
    </th>
  </thead>
  <thead>
    <th class="has-text-centered">
      <div class="ob-cell-content">
        Date
      </div>
    </th>
    <th>
      <div class="ob-cell-content">
        Description
      </div>
    </th>
    <th class="has-text-right">
      <div class="ob-cell-content">
        Credit
      </div>
    </th>
    <th class="has-text-right">
      <div class="ob-cell-content">
        Debit
      </div>
    </th>
    <th class="has-text-right">
      <div>
        Balance
      </div>
    </th>
  </thead>
  <tbody>
    <%= render partial: "transactions/components/transactionLine", collection: @transactions, as: :transaction %>
  </tbody>
</table>