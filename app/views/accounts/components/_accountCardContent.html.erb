<%= content_tag :header, class: "card-header has-background-primary", data: { tooltip: account.name_too_long ? account.name : nil } do -%>
  <h6 class="title is-6 card-header-title has-text-white">
    <%= account.account_card_title %>
  </h6>
<% end %>
<div class="card-content">
  <div class="content has-text-right ">
    <p class="title is-6 has-text-link">
      <span class="icon has-text-primary" style="display: inline-table">
        <i class="fas <%= account.account_icon %>"></i>
      </span>
      Balance
    </p>
    <p class="subtitle is-2 mb-0 <%= account.balance_color %>">
      <%= account.current_balance_display %>
    </p>
    <p class="is-size-7 has-text-grey-light">as of <%= account.updated_at_display %></p>
    <% if account.credit? %>
      <div class="is-size-7 has-text-grey">
        <strong><%= number_to_currency(account.available_credit) %></strong> available of <strong><%= number_to_currency(account.credit_limit) %></strong><br />
        <strong><%= account.credit_utilization %>%</strong> utilization @ <strong><%= account.interest_rate %>%</strong> interest
      </div>
    <% end %>
  </div>
</div>