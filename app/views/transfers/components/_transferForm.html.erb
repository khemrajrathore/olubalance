<%= form_with method: :post, url: transfers_path(@account), local: true do |f| %>
  <div class="field">
    Transferring from <%= @account.account_card_title %>
  </div>

  <%= f.hidden_field :transfer_from_account, value: @account.id %>
  
  <div class="field">
    <div class="control">
      <div class="select is-primary is-fullwidth">
        <%= f.collection_select(:transfer_to_account, @transfer_accounts, :id, :name, { include_blank: 'Transfer to...' }) %>
      </div>
    </div>
  </div>

  <div class="field">
    <div class="control has-icons-left">
      <%= f.text_field :transfer_amount, class: "input is-primary",
                                placeholder: "Amount" %>
      <span class="icon is-small is-left has-text-primary">
        <i class="fas fa-dollar-sign"></i>
      </span>
    </div>
  </div>

  <div class="field is-grouped">
    <div class="control">
      <%= f.button 'Submit',
          type: 'submit',
          class: "button is-link" %>
    </div>
  </div>
<% end %>