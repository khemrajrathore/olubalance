<div class="container">
  <nav class="level">
    <!-- Left side -->
    <div class="level-left">
    </div>

    <!-- Right side -->
    <div class="level-right">
      <div class="level-item">
        <%= form_for :summary_mail, url: "summary/mail" do |f| %>
          <div class="field has-addons">
            <p class="control">
              <%= f.text_field :to, class: "input is-small" %>
            </p>
            <p class="control">
              <%= f.submit "Send", class: "button is-small" %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </nav>
  <%= render partial: "summary" %>
</div>