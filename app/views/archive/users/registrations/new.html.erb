<div class="row">
  <div class="col s12 l4">
    <h5 class="ob-text-primary"><strong>Sign up</strong></h5>
  </div>
</div>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <%= f.input :first_name, required: true, icon: 'person', autofocus: true, wrapper_html: { class: "input-field l3 s12" } %>
    <%= f.input :last_name, required: true, icon: 'none', wrapper_html: { class: "input-field l3 s12" } %>
  </div>

  <div class="row">
    <%= f.input :email, required: true, icon: 'email', wrapper_html: { class: "input-field l6 s12" } %>
  </div>

  <div class="row">
      <%= f.input :timezone, as: :time_zone, required: true, icon: 'access_time', selected: '(GMT-05:00) Eastern Time (US & Canada)', wrapper_html: { class: "input-field l6 s12" } %>
  </div>

  <div class="row">
    <%= f.input :password, icon: 'lock', required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), wrapper_html: {class: "input-field l6 s12" } %>
  </div>

  <div class="row">
  	<%= f.input :password_confirmation, icon: 'lock', required: true, wrapper_html: {class: "input-field l6 s12" } %>
  </div>

  <div class="row">
  	<div class="col l4 s12">
		<%= button_tag(type: 'submit', class: 'btn waves-effect waves-light') do %>
			Sign up
		<% end %>
    </div>
  </div>
<% end %>

<%= render "users/shared/links" %>
