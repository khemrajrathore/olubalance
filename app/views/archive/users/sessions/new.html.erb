<div class="row">
  <div class="col s12 l4">
    <h5 class="ob-text-primary"><strong>Login</strong></h5>
  </div>
</div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <%= f.input :email, required: false, icon: 'email', autofocus: true, wrapper_html: { class: "input-field l4 s12" } %>
  </div>

  <div class="row">
    <%= f.input :password, icon: 'lock', required: false, wrapper_html: {class: "input-field l4 s12" } %>
  </div>

  <div class="row">
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="row">
  	<div class="col l4 s12">
		<%= button_tag(type: 'submit', class: 'btn waves-effect waves-light') do %>
			Login
		<% end %>
    </div>
  </div>
<% end %>

<%= render "users/shared/links" %>
