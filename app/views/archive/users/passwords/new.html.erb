<div class="row">
  <div class="col s12 l4">
    <h5 class="ob-text-primary"><strong>Forgot your password?</strong></h5>
  </div>
</div>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <%= f.input :email, required: true, icon: 'email', autofocus: true, wrapper_html: { class: "input-field l6 s12" } %>
  </div>

  <div class="row">
  	<div class="col l4 s12">
		<%= button_tag(type: 'submit', class: 'btn waves-effect waves-light') do %>
			Send Me Reset Password Instructions
		<% end %>
    </div>
  </div>
<% end %>

<%= render "users/shared/links" %>
